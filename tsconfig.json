{
  "include": [
    "src/scripts/**/**.ts",
    "tasks/**/*.ts",
    "*.ts",
    "*.js",
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // Transformation is done using Babel
    "noEmit": true,
    "esModuleInterop": true,
  }
}
